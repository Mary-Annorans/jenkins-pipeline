pipeline {
    agent any

    environment {
        SONAR_URL = "http://54.166.186.138:9000/"
        DOCKER_IMAGE = "maryann/ultimate-cicd:${BUILD_NUMBER}"
        APP_DIR = "java-maven-sonar-argocd-helm-k8s/spring-boot-app"
        MANIFESTS_DIR = "java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Mary-Annorans/jenkins-pipeline.git'
                sh 'ls -la'
                sh 'find . -name "pom.xml" -type f'
            }
        }

        stage('Build and Test') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-11'
                    args '--user root -v /root/.m2:/root/.m2'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    cd ${APP_DIR}
                    pwd
                    ls -la
                    mvn clean package
                '''
            }
        }

        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'maven:3.8.6-openjdk-11'
                    args '--user root -v /root/.m2:/root/.m2'
                    reuseNode true
                }
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd ${APP_DIR}
                        mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'docker-hub',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh '''#!/bin/bash
                            cd ${APP_DIR}

                            DOCKER_IMAGE="maryann123456789/ultimate-cicd"
                            TAG=$(echo $GIT_COMMIT | cut -c1-8)

                            echo "Building and pushing Docker image..."
                            docker build -t $DOCKER_IMAGE:$TAG .
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                            docker push $DOCKER_IMAGE:$TAG

                            echo " Docker image pushed successfully: $DOCKER_IMAGE:$TAG"
                        '''
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                        sh '''#!/bin/bash
                            git config --global user.email "moranekwulu@gmail.com"
                            git config --global user.name "Mary-Annorans"

                            if [ -d "${MANIFESTS_DIR}" ]; then
                                cd ${MANIFESTS_DIR}

                                if [ -f "deployment.yml" ]; then
                                    sed -i "s|replaceImageTag|${BUILD_NUMBER}|g" deployment.yml

                                    echo "Updated deployment.yml:"
                                    cat deployment.yml

                                    if git diff --quiet; then
                                        echo "No changes to commit"
                                    else
                                        git add deployment.yml
                                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                                        git push https://${GITHUB_TOKEN}@github.com/Mary-Annorans/jenkins-pipeline.git HEAD:main
                                    fi
                                else
                                    echo "ERROR: deployment.yml not found in ${MANIFESTS_DIR}"
                                    ls -la
                                    exit 1
                                fi
                            else
                                echo "ERROR: Manifests directory ${MANIFESTS_DIR} not found"
                                ls -la
                                exit 1
                            fi
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
